{
  "name": "@examples/basic",
  "private": true,
  "description": "Basic example for Tailor Platform SDK usage",
  "type": "module",
  "scripts": {
    "generate": "tailor-sdk generate -c tailor.config.ts",
    "generate:watch": "tailor-sdk generate -c tailor.config.ts --watch",
    "apply": "tailor-sdk apply -c tailor.config.ts",
    "test": "pnpm test:generator",
    "test:all": "pnpm test:generator:prepare && vitest",
    "test:generator": "pnpm test:generator:prepare && vitest --project generator",
    "test:generator:prepare": "tsx tests/scripts/generate_files.ts actual",
    "test:generator:update-expects": "tsx tests/scripts/generate_files.ts",
    "test:e2e": "vitest --project e2e",
    "analyze:bundle": "tsx tests/scripts/analyze_minified_size.ts",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache . --fix --quiet",
    "typecheck": "pnpm generate && tsc --noEmit",
    "perf:typecheck": "pnpm perf:typecheck:full && pnpm perf:typecheck:inference",
    "perf:typecheck:full": "bash scripts/perf/run-typecheck-full.sh",
    "perf:typecheck:inference": "bash scripts/perf/run-typecheck-inference.sh"
  },
  "dependencies": {
    "@tailor-platform/tailor-proto": "workspace:^",
    "@tailor-platform/tailor-sdk": "workspace:^",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@connectrpc/connect": "^2.0.3",
    "@connectrpc/connect-node": "^2.0.3",
    "@tailor-platform/function-kysely-tailordb": "0.1.2",
    "@tailor-platform/function-types": "0.6.1",
    "@types/node": "^22.15.3",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "engines": {
    "node": ">= 22.14.0"
  }
}
