{
  "name": "multi-application",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "pnpm run deploy:user && pnpm run deploy:admin",
    "deploy:user": "tailor-sdk apply -c apps/user/tailor.config.ts",
    "deploy:admin": "tailor-sdk apply -c apps/admin/tailor.config.ts",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "lint": "oxlint . && eslint --cache .",
    "lint:fix": "oxlint --fix . && eslint --cache --fix .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@tailor-platform/sdk": "workspace:^",
    "@types/node": "24.10.4",
    "eslint": "9.39.2",
    "eslint-plugin-oxlint": "1.34.0",
    "oxfmt": "0.19.0",
    "oxlint": "1.34.0",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0"
  }
}
