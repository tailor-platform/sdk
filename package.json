{
  "name": "tailor-dev-kit",
  "private": true,
  "description": "Tailor Development Kit - Workspace Root",
  "type": "module",
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "test": "turbo run test",
    "dev": "turbo run dev",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:root": "prettier --write .",
    "format:check": "turbo run format:check",
    "format:check:root": "prettier --check .",
    "typecheck": "TAILOR_PLATFORM_SDK_TYPE_PATH=./user-defined.d.ts turbo run typecheck",
    "typecheck:root": "tsc --noEmit",
    "perf:typecheck": "pnpm --filter example perf:typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@eslint/js": "9.39.1",
    "@tailor-platform/sdk": "workspace:^",
    "@types/node": "22.19.1",
    "eslint": "9.39.1",
    "eslint-plugin-import": "2.32.0",
    "globals": "16.5.0",
    "lefthook": "1.13.6",
    "pkg-pr-new": "0.0.61",
    "prettier": "3.7.3",
    "tsx": "4.21.0",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0"
  },
  "engines": {
    "node": ">= 22.14.0"
  }
}
