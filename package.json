{
  "name": "tailor-dev-kit",
  "version": "1.0.0",
  "description": "Tailor Development Kit - Workspace Root",
  "type": "module",
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "test": "turbo run test",
    "dev": "turbo run dev",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
