{
  "name": "tailor-dev-kit",
  "private": true,
  "description": "Tailor Development Kit - Workspace Root",
  "keywords": [],
  "license": "MIT",
  "author": "",
  "type": "module",
  "scripts": {
    "test": "turbo run test",
    "dev": "turbo run dev",
    "check": "TAILOR_PLATFORM_SDK_TYPE_PATH=./user-defined.d.ts turbo run check",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "knip": "turbo run knip",
    "typecheck:go": "TAILOR_PLATFORM_SDK_TYPE_PATH=./user-defined.d.ts turbo run typecheck:go",
    "format": "turbo run format",
    "format:root": "oxfmt --write .",
    "format:check": "turbo run format:check",
    "format:check:root": "oxfmt --check .",
    "typecheck": "TAILOR_PLATFORM_SDK_TYPE_PATH=./user-defined.d.ts turbo run typecheck",
    "typecheck:root": "tsc --noEmit",
    "perf:typecheck": "pnpm --filter example perf:typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@eslint/js": "9.39.2",
    "@tailor-platform/sdk": "workspace:^",
    "@types/node": "24.10.9",
    "eslint": "9.39.2",
    "eslint-plugin-import": "2.32.0",
    "globals": "17.0.0",
    "knip": "5.82.0",
    "lefthook": "2.0.15",
    "oxfmt": "0.24.0",
    "pkg-pr-new": "0.0.62",
    "ts-morph": "^27.0.2",
    "tsx": "4.21.0",
    "turbo": "2.7.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0"
  },
  "engines": {
    "node": ">= 22.14.0"
  },
  "packageManager": "pnpm@10.28.0"
}
