    "@types/node": "22.17.0",
    "eslint": "9.32.0",
    "eslint-config-prettier": "10.1.8",
    "globals": "16.3.0",
    "lefthook": "1.12.2",
    "pkg-pr-new": "0.0.54",
    "prettier": "3.5.3",
    "tsx": "4.20.3",
    "turbo": "2.5.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.0"
  },
  "engines": {
    "node": ">= 22.14.0"
