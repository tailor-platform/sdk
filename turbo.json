{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalPassThroughEnv": [
    "TAILOR_PLATFORM_TOKEN",
    "TAILOR_PLATFORM_WORKSPACE_ID",
    "TAILOR_PLATFORM_PROFILE",
    "TAILOR_PLATFORM_SDK_TYPE_PATH"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "generate": {
      "dependsOn": ["build"],
      "cache": false
    },
    "generate:watch": {
      "dependsOn": ["build"],
      "cache": false
    },
    "apply": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check": {
      "dependsOn": ["format", "lint:fix", "typecheck"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "format": {
      "dependsOn": ["//#format:root"],
      "cache": true
    },
    "format:check": {
      "dependsOn": ["//#format:check:root"],
      "cache": true
    },
    "//#format:root": {
      "cache": true
    },
    "//#format:check:root": {
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["build", "generate"],
      "outputs": [],
      "cache": true
    }
  }
}
