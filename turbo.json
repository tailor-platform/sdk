{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalPassThroughEnv": ["GITHUB_PACKAGES_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "gen": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "gen:watch": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "apply": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#check": {
      "dependsOn": ["^format", "^lint:fix", "^typecheck"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "format": {
      "dependsOn": ["^format", "//#format:root"],
      "cache": false
    },
    "format:check": {
      "dependsOn": ["^format:check", "//#format:check:root"],
      "cache": false
    },
    "//#format:root": {
      "cache": false
    },
    "//#format:check:root": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"],
      "cache": false
    }
  }
}
