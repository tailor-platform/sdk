{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalPassThroughEnv": ["GITHUB_PACKAGES_READ_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["//#test:root"],
      "cache": false
    },
    "//#test:root": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#test:root:update-expects": {
      "cache": false
    },
    "//#gen": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#gen:perf": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#apply": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "//#check": {
      "dependsOn": ["^format", "^lint"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint", "//#lint:root"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix", "//#lint:fix:root"],
      "outputs": [".eslintcache"],
      "cache": true
    },
    "//#lint:root": {
      "cache": true
    },
    "//#lint:fix:root": {
      "cache": true
    },
    "format": {
      "dependsOn": ["^format", "//#format:root"],
      "cache": false
    },
    "format:check": {
      "dependsOn": ["^format:check", "//#format:check:root"],
      "cache": false
    },
    "//#format:root": {
      "cache": false
    },
    "//#format:check:root": {
      "cache": false
    }
  }
}
