{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalPassThroughEnv": ["NPM_TOKEN", "TAILOR_TOKEN", "WORKSPACE_ID"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "gen": {
      "dependsOn": ["build"],
      "cache": false
    },
    "gen:watch": {
      "dependsOn": ["build"],
      "cache": false
    },
    "apply": {
      "dependsOn": ["build"],
      "cache": false
    },
    "check": {
      "dependsOn": ["format", "lint:fix", "typecheck"],
      "cache": false
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": true
    },
    "lint:fix": {
      "outputs": [".eslintcache"],
      "cache": true
    },
    "format": {
      "dependsOn": ["//#format:root"],
      "cache": false
    },
    "format:check": {
      "dependsOn": ["//#format:check:root"],
      "cache": false
    },
    "//#format:root": {
      "cache": false
    },
    "//#format:check:root": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
