{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tailor-platform/tailor-sdk": ["packages/tailor-sdk/src/index.ts"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*", "tailor.config.ts"],
  "exclude": ["node_modules", "dist", "tests/fixtures", "tests/temp"]
}
