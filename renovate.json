{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>tailor-inc/renovate-config",
    "github>aquaproj/aqua-renovate-config#2.9.0",
    ":pinAllExceptPeerDependencies",
    ":disableDependencyDashboard"
  ],
  "dependencyDashboardApproval": false,
  "timezone": "Asia/Tokyo",
  "schedule": ["* 9-18 * * 1-5"],
  "postUpgradeTasks": {
    "commands": ["node scripts/add-renovate-changeset.mjs"],
    "fileFilters": [".changeset/**"],
    "executionMode": "branch"
  },
  "packageRules": [
    {
      "description": "Enable major updates without dashboard approval (dashboard is disabled)",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": false
    },
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["@connectrpc/*"],
      "groupName": "@connectrpc"
    }
  ]
}
