{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>tailor-inc/renovate-config",
    ":pinAllExceptPeerDependencies",
    ":disableDependencyDashboard"
  ],
  "dependencyDashboardApproval": false,
  "timezone": "Asia/Tokyo",
  "schedule": ["* 9-18 * * 1-5"],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchPackageNames": ["@connectrpc/*"],
      "groupName": "@connectrpc"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^aqua\\.yaml$/"],
      "matchStrings": [
        "# renovate: depName=(?<depName>[^\\s]+)\\s+(?:datasource=(?<datasource>[^\\s]+))?\\s*\\n[^\\n]*?(?:ref|version): (?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{datasource}}{{else}}github-releases{{/if}}"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^aqua\\.yaml$/"],
      "matchStrings": ["- name: (?<depName>[^@]+)@(?<currentValue>.+?)\\s+"],
      "datasourceTemplate": "github-releases"
    }
  ]
}
